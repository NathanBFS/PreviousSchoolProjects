<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/headingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:text="Weather of the Future"
        style="@style/title"
    />
    
    <TextView 
        android:id="@+id/_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headingText"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
    />
    
    <ImageView 
    	android:id="@+id/weatherImage"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center_horizontal"
    	android:paddingTop="10dp"   
    />
    
    <TextView 
            android:id="@+id/_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:paddingTop="5dp"
    />
	
    <TextView 
        android:id="@+id/minMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimums and Maximums"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:visibility="gone"
    />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        
		<TextView 
	        android:id="@+id/_minCelsius"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/minMax"
	        android:paddingRight="5dp"
	    />
		
		<TextView 
	        android:id="@+id/_maxCelsius"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/minMax"
	        android:paddingRight="10dp"
	    />
		
		<TextView 
		    android:id="@+id/_minFahrenheit"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         style="@style/minMax"
	        android:paddingLeft="10dp"
	    />
		    
		<TextView 
		    android:id="@+id/_maxFahrenheit"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/minMax"
	        android:paddingLeft="5dp"
	    />
    
	</LinearLayout>

    		<Button 
		    android:id="@+id/webButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:text="View Other Weather Data"
		/>
    
</LinearLayout>